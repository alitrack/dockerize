#!/bin/sh
docker build \
	-q \
	-t raugfer/golang:1.10.8 \
	--build-arg USER=$USER \
	`dirname $0`/../docker/golang-docker/
mkdir -p $HOME/Projects/
docker run \
	-it \
	--hostname golang \
	--rm \
	--name golang \
	-v $HOME/Projects/:$HOME/Projects/ \
	-w $PWD \
	-e TERM=$TERM \
	raugfer/golang:1.10.8 \
	bash
