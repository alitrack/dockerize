#!/bin/sh
docker build \
	-q \
	-t raugfer/python:3.6.8 \
	--build-arg USER=$USER \
	`dirname $0`/../docker/python-docker/
mkdir -p $HOME/Projects/
docker run \
	-it \
	--hostname python \
	--rm \
	--name python \
	-v $HOME/Projects/:$HOME/Projects/ \
	-w $PWD \
	-e TERM=$TERM \
	raugfer/python:3.6.8 \
	bash
