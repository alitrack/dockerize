#!/bin/sh
docker build \
	-q \
	-t $USER/discord:0.0.10 \
	--build-arg USER=$USER \
	`dirname $0`/../docker/discord-docker/
mkdir -p $HOME/.config/discord-docker/
docker run \
	-d \
	--rm \
	--name discord \
	--cap-add SYS_ADMIN \
	-e DISPLAY \
	-v /tmp/.X11-unix/:/tmp/.X11-unix/ \
	-v $HOME/.config/discord-docker/:$HOME/.config/discord/ \
	--device /dev/snd \
	$USER/discord:0.0.10
